    @Override
    public void actionPerformed(ActionEvent e) {
        if (e.getSource() == jcomp1) {
            // "Registrarse" 
            String nombre = jcomp7.getText(); 
            String usuario = jcomp11.getText(); 
            char[] contrasena = jcomp12.getPassword(); 
            
            JOptionPane.showMessageDialog(this, "Registro exitoso: Name=" + nombre + ", Username=" + usuario);
        } else if (e.getSource() == jcomp2) {
            // "Ingresar" 
            String usuario = jcomp13.getText(); 
            char[] contrasena = jcomp35.getPassword(); 
            
            JOptionPane.showMessageDialog(this, "Ingreso exitoso: " + usuario);
        } else if (e.getSource() == jcomp36) {
            // "Agregar" en Ofertar
            String tipoProducto = jcomp30.getText();
            String cantidad = jcomp31.getText();
            String fecha = jcomp32.getText();
            String descripcion = jcomp33.getText();
            
            // Agregar datos a StringBuilder
            ofertarData.append("Tipo producto: ").append(tipoProducto).append(", Cantidad: ").append(cantidad)
                    .append(", Fecha: ").append(fecha).append(", Descripcion: ").append(descripcion).append("\n");
            
            JOptionPane.showMessageDialog(this, "Datos agregados correctamente.");
        } else if (e.getSource() == jcomp37) {
            JOptionPane.showMessageDialog(this, "Datos publicados correctamente:\n" + ofertarData.toString());
        } else if (e.getSource() == jcomp41) {
            // "Personalizar Perfil"
            String personalizacion = JOptionPane.showInputDialog(this, "¿Qué deseas personalizar?");
            if (personalizacion != null && !personalizacion.isEmpty()) {
                JOptionPane.showMessageDialog(this, "Personalización seleccionada: " + personalizacion);
            } else {
                JOptionPane.showMessageDialog(this, "No se ha seleccionado ninguna personalización.");
            }
        } else if (e.getSource() == jcomp43) {
            // "Salir" 
            System.exit(0);
        } else if (e.getSource() == jcomp16) {
            // "Buscar"
            String filtro = (String) jcomp15.getSelectedItem(); 
            String busqueda = jcomp38.getText(); 

            JOptionPane.showMessageDialog(this, "Búsqueda realizada:\nFiltro: " + filtro + "\nTérmino de búsqueda: " + busqueda);
        }
        // ... (handle other button events)
    }

    public static void main(String[] args) {
        JFrame frame = new JFrame("Interfaz");
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.add(new Interfaz());
        frame.pack();
        frame.setVisible(true);
    }
}

